@inherits UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var leadBannerId = Umbraco.Media(CurrentPage.Site().leadbannerImage);
    string leadBannerUrl = leadBannerId.Url;
}

@section stylesheets {
    <style>
        body header {
            background-image: url('@Html.Raw(leadBannerUrl)');
        }
    </style>
}

@Html.Partial("~/Views/Partials/Home/_Leadbanner.cshtml")
@Html.Partial("~/Views/Partials/Home/_AboutUsCta.cshtml")
@Html.Partial("~/Views/Partials/Home/_Qualities.cshtml")
@Html.Partial("~/Views/Partials/Home/_Products.cshtml")

<div>
    @CurrentPage.GetGridHtml("grid")
</div>