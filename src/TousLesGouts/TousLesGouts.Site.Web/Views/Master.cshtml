@inherits UmbracoTemplatePage
@{
    Layout = null;
    string siteName = CurrentPage.Site().siteName;
    string description = CurrentPage.Site().metaDescription;
    var selection = CurrentPage.Site().Children.Where("Visible");
    var logoId = Umbraco.Media(CurrentPage.Site().logo);
    string logoUrl = logoId.Url;
    string imageUrl = CurrentPage.Site().UrlAbsolute().TrimEnd('/') + logoUrl;
    string documentType = CurrentPage.ContentType.Alias;
    string pageClass = !string.IsNullOrEmpty(documentType) ? documentType.ToLowerInvariant() : null;
    var contactPage = Umbraco.Content(1078);
}

<!DOCTYPE html>
<html lang="nl">

<head>
	<title>@Umbraco.Field("title") | @siteName</title>
	<meta name="description" content="@Umbraco.Field("metaDescription")" />
	<meta name="keywords" content="@Umbraco.Field("metaKeywords")" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="canonical" href="@CurrentPage.UrlAbsolute()" />
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css" />
    <script src="https://use.fontawesome.com/b2effcc987.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Sansita" rel="stylesheet">
    <link href="~/assets/vendor/magnific-popup/magnific-popup.css" rel="stylesheet">
    <link href="~/assets/vendor/creative-bootstrap/css/creative.min.css" rel="stylesheet">
    <link href="~/assets/css/site.css" rel="stylesheet">
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
	@RenderSection("stylesheets", false)
</head>

<body id="page-top" class="@pageClass">
    @Html.Partial("~/Views/Partials/Shared/_Navigation.cshtml")
    @RenderBody()
    @Html.Partial("~/Views/Partials/Shared/_Footer.cshtml")
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="~/assets/vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="~/assets/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/vendor/creative-bootstrap/js/creative.min.js"></script>
    @RenderSection("scripts", false)
    <script type="application/ld+json">
        {
            "@@context": "http://schema.org",
            "@@type": "Store",
            "name": "@siteName",
            "description": "@description",
            "openingHours": "@contactPage.openingsHoursMetadata",
            "telephone": "@contactPage.telephone",
            "priceRange": "€€",
            "image": "@imageUrl",
            "url": "@CurrentPage.Site().UrlAbsolute()",
            "address":
            {
                "@@type": "PostalAddress",
                "streetAddress": "@contactPage.streetAndNumber",
                "addressLocality": "@contactPage.city",
                "postalCode": "@contactPage.postalCode",
                "addressCountry": "BE"
            }
        }
    </script>
</body>
</html>