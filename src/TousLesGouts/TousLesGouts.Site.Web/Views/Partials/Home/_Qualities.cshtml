@inherits UmbracoTemplatePage

@{
    var qualitiesFolder = Umbraco.Content(1095);
}

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">@Umbraco.Field("qualitiesTitle")</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var quality in qualitiesFolder.Children().Where("Visible"))
            {
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x @quality.icon text-primary sr-icons"></i>
                        <h3>@quality.title</h3>
                        <p class="text-muted">@quality.text</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>